extends layout 


block content 

    h1 #{title}

    form(method='POST' action='')
        div.form-group 
            label(for="first_name") First name: 
            input(class="m-2")#first_name.form-control(type='text', placeholder='First name...' name='first_name', value=(undefined===author ? '' : author.first_name))
            
            label(for="family_name") Family name: 
            input(class="m-2")#family_name.form-control(type='text', placeholder='Family name...' name='family_name', value=(undefined===author ? '' : author.family_name))
            
            label(for="date_of_birth") Date of birth: 
            input(class="m-2")#date_of_birth.form-control(type='text', placeholder='Date of birth...' name='date_of_birth', value=(undefined===author ? '' : author.date_of_birth))
            
            label(for="date_of_death") Date of death: 
            input(class="m-2")#date_of_death.form-control(type='text', placeholder='Date of death...' name='date_of_death', value=(undefined===author ? '' : author.date_of_death))
        
        button.btn.btn-primary(type='submit') Submit  
    
    if errors
        ul 
            for error in errors 
                li(class="m-2")!=error.msg